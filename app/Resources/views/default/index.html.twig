{% extends 'base.html.twig' %}

{% block body %}
    
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>ROCK PAPER SCISSORS SPOCK LIZARD</h1>
            </div>

            <div id="status">
                <p>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </p>
            </div>

            <div id="next">
                {# Status User To Result Of Last Game #}
                {% if app.request.hasPreviousSession %}
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="flash flash-{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}
            </div>
            <br/>
            <table id='statsTable'>
                <thead>
                    <th>
                        
                    </th>
                    <th>
                        Player
                    </th>
                    <th>
                        Computer
                    </th>
                    <th>
                        Total
                    </th>
                </thead>
                <tr>
                    <td>
                        Total Wins
                    </td>
                    <td>
                        {{stats.getWins(true, false)}}
                    </td>
                    <td>
                        {{stats.getWins(false, true)}}
                    </td>
                    <td>
                        {{stats.getWins()}}
                    </td>
                </tr>
                <tr>
                    <td class='divider' colspan="4">
                        Decision Breakdown
                    </td>
                </tr>
                <tr>
                    <td>
                        Rock Thrown
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::ROCK'), true, false)}}
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::ROCK'), false, true)}}
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::ROCK'), true, true)}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Paper Thrown
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::PAPER'), true, false)}}
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::PAPER'), false, true)}}
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::PAPER'), true, true)}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Scissors Thrown
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::SCISSORS'), true, false)}}
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::SCISSORS'), false, true)}}
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::SCISSORS'), true, true)}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Spock Thrown
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::SPOCK'), true, false)}}
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::SPOCK'), false, true)}}
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::SPOCK'), true, true)}}
                    </td>
                </tr>
                 <tr>
                    <td>
                        Lizard Thrown
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::LIZARD'), true, false)}}
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::LIZARD'), false, true)}}
                    </td>
                    <td>
                        {{stats.getDecisions(constant('AppBundle\\Entity\\DecisionType::LIZARD'), true, true)}}
                    </td>
                </tr>
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    body { background: #F5F5F5; font: 18px/1.5 sans-serif; }
    h1, h2 { line-height: 1.2; margin: 0 0 .5em; }
    h1 { font-size: 36px; }
    h2 { font-size: 21px; margin-bottom: 1em; }
    p { margin: 0 0 1em 0; }
    a { color: #0000F0; }
    a:hover { text-decoration: none; }
    code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
    #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; }
    #container { padding: 2em; }
    #welcome, #status { margin-bottom: 2em; }
    #welcome h1 span { display: block; font-size: 75%; }
    #statsTable{width:100%;}
    #statsTable th{text-align:left;}
    .flash{width:100%;color:white;text-align:center;}
    .flash-success{background: green;}
    .flash-warning{background: red;}
    .flash-notice{background: yellow;}
    .divider{padding:2px; background:lightgray;color:white;font-size:10px;}
    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; }
        #icon-book { display: inline-block; }
        #status a, #next a { display: block; }

        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
    }
</style>
{% endblock %}
